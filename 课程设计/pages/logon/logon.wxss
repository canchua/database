/* pages/logon/logon.wxss */

.page{
  height: 100%;
  position: relative;
}

.background{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  font-family: PingFangSC;
}

.icon{
  margin-top: 40px; 
  height: 80px;
  width: 80px;
  align-self: center;
}

.logon{
  margin-top: 60px;
  margin-right: 30px;
  margin-left: 30px;
  display: flex;
  flex-direction: column;
  /* text-align: center; */
}

.division{
  height: 1px;
  /* margin-left: 15px;
  margin-right: 15px;  */
  
  background: #F3F2F2;
}

.logonRow{
  height: 45px;
  display: flex;
  flex-direction: column;
}

.logonText{
  display: flex;
  flex-direction: row;
  align-content: flex-start;
  /* align-content: center; */
  justify-content: space-between;
  margin-top: 8px;
}

.Name{
  margin-right: 2px;
}

.Num{
  margin-right: 20px;
  font-size: 20px;
}

.placeholderStyle{
  font-size: 23px;
  color: #666;
}

.forget{
  margin-top: 10px;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}

.forgetWord{
  margin-right: 5%;
  align-self: flex-end;
  /* margin-left: 80%; */
  font-size: 16px;
  color: #BBB;
}

.logonButton{
  margin-top: 30px;
  height: 45px;
  width: 70%;
  margin-left: 15%;
  background-color: #1aad19; 
  display: flex;
  flex-direction: column;
  justify-content: center;
  /* justify-content: space-between; */
  border-radius: 5px;
}

.buttonText{
  display: flex;
  flex-direction: row;
  align-content: flex-start;
  justify-content: center;
  /* align-content: center; */
  /* text-align: center; */
}

.buttonWord{
  align-self: center;
  color: #fff;
  font-size: 19px;
  /* text-align: center; */
}

.btn{
  width: 70%;
  margin-top: 30px;
  background-color: #6FA7FF;
  color: #fff; 
}